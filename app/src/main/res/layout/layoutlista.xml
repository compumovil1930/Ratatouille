<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagenPersonas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignTop="@id/imagenPersonas"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/imagenPersonas"
        android:paddingStart="16dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenPersonas"
        android:layout_alignParentStart="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-66dp"
        android:layout_toEndOf="@id/imagenPersonas"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Nombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignRight="@id/Nombre"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="28dp"
        android:layout_marginRight="1dp" />
</RelativeLayout>