<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="edu.javeriana.ratatouille_chef_app.landing.ui.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing">
        <action
            android:id="@+id/action_landingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_landingFragment_to_registerFragment"
            app:destination="@+id/registerFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="edu.javeriana.ratatouille_chef_app.authentication.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="edu.javeriana.ratatouille_chef_app.authentication.ui.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="address"
            android:defaultValue="@null"
            app:argType="android.location.Address"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="edu.javeriana.ratatouille_chef_app.profile.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_clientRequestsFragment"
            app:destination="@id/clientRequestsFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_profileFragment_to_landingFragment"
            app:destination="@id/landingFragment" />
        <action
            android:id="@+id/action_profileFragment_to_biographyFragment"
            app:destination="@id/biographyFragment" />
        <action
            android:id="@+id/action_profileFragment_to_chefsListFragment"
            app:destination="@id/chefsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientRequestsFragment"
        android:name="edu.javeriana.ratatouille_chef_app.client_requests.ui.ClientRequestsFragment"
        android:label="fragment_client_requests"
        tools:layout="@layout/fragment_client_requests" >
        <action
            android:id="@+id/action_clientRequestsFragment_to_newRequestDetail"
            app:destination="@id/newRequestDetail" />
        <action
            android:id="@+id/action_clientRequestsFragment_to_mapRequestFragment"
            app:destination="@+id/mapRequestFragment" />
        <action
            android:id="@+id/action_clientRequestsFragment_to_completeRequestFragment"
            app:destination="@id/completeRequestFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="edu.javeriana.ratatouille_chef_app.core.ui.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <argument
            android:name="isFromChefs"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_mapFragment_to_chefsListFragment"
            app:destination="@id/chefsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/newRequestDetail"
        android:name="edu.javeriana.ratatouille_chef_app.client_requests.ui.NewRequestDetailFragment"
        android:label="fragment_new_request_detail"
        tools:layout="@layout/fragment_new_request_detail" >
        <argument
            android:name="recepieId"
            app:argType="string" />
        <action
            android:id="@+id/action_newRequestDetail_to_mapRequestFragment"
            app:destination="@+id/mapRequestFragment" />
        <argument
            android:name="address"
            android:defaultValue="@null"
            app:argType="android.location.Address"
            app:nullable="true" />
        <action
            android:id="@+id/action_newRequestDetail_to_clientRequestsFragment"
            app:destination="@id/clientRequestsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapRequestFragment"
        android:name="edu.javeriana.ratatouille_chef_app.client_requests.ui.MapRequestFragment"
        android:label="fragment_map_request"
        tools:layout="@layout/fragment_map_request" >
        <action
            android:id="@+id/action_mapRequestFragment_to_completeRequestFragment"
            app:destination="@id/completeRequestFragment" />
        <argument
            android:name="transactionId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/completeRequestFragment"
        android:name="edu.javeriana.ratatouille_chef_app.client_requests.ui.CompleteRequestFragment"
        android:label="CompleteRequestFragment" >
        <argument
            android:name="transactionId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/biographyFragment"
        android:name="edu.javeriana.ratatouille_chef_app.profile.ui.BiographyFragment"
        android:label="fragment_biography"
        tools:layout="@layout/fragment_biography" >
        <action
            android:id="@+id/action_biographyFragment_to_newRecipeFormFragment"
            app:destination="@id/newRecipeFormFragment" />
        <argument
            android:name="chefId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_biographyFragment_to_newRequestDetail"
            app:destination="@id/newRequestDetail" />
        <argument
            android:name="address"
            android:defaultValue="@null"
            app:argType="android.location.Address"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/newRecipeFormFragment"
        android:name="edu.javeriana.ratatouille_chef_app.profile.ui.NewRecipeFormFragment"
        android:label="fragment_new_recipe_form"
        tools:layout="@layout/fragment_new_recipe_form" >
        <action
            android:id="@+id/action_newRecipeFormFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/chefsListFragment"
        android:name="edu.javeriana.ratatouille_chef_app.client_requests.ui.ChefsListFragment"
        android:label="ChefsListFragment" >
        <action
            android:id="@+id/action_chefsListFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="address"
            app:argType="android.location.Address"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_chefsListFragment_to_biographyFragment"
            app:destination="@id/biographyFragment" />
    </fragment>
</navigation>